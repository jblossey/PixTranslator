{
  "name": "Pixtranslator",
  "version": "0.1.0-alpha",
  "description": "Translate your JPEGs Keywords and Caption via Deepl.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jblossey/PixTranslator.git"
  },
  "private": true,
  "keywords": [
    "iptc",
    "exif",
    "xmp",
    "tags",
    "captions",
    "jpg",
    "metadata",
    "deepl",
    "translation",
    "keywords",
    "photography"
  ],
  "author": "Jannis Blossey <jannis@blossey.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jblossey/PixTranslator/issues"
  },
  "homepage": "https://github.com/jblossey/PixTranslator/blob/master/README.md",
  "build": {
    "appId": "com.pixtranslator",
    "productName": "Pixtranslator",
    "copyright": "Copyright Â© 2020 ${author}",
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "publish": {
        "provider": "github",
        "private": true
      }
    },
    "linux": {
      "target": "AppImage",
      "category": "Graphics"
    }
  },
  "dependencies": {
    "electron-json-storage": "^4.1.8",
    "electron-progressbar": "^1.2.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.2.5",
    "jquery": "^3.4.1",
    "minimal-request-promise": "^1.5.0",
    "needle": "^2.3.3",
    "promise": "^8.1.0",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "babel-eslint": "^10.1.0",
    "electron-builder": "^22.4.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0"
  }
}
