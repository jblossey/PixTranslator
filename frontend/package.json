{
  "name": "Pixtranslator",
  "version": "0.1.8-alpha",
  "description": "Translate your JPEGs Keywords and Caption via Deepl.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder  --linux --win",
    "dist_dev": "electron-builder --linux tar.gz",
    "release": "electron-builder --publish 'onTagOrDraft'",
    "test": "nyc xo && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jblossey/PixTranslator.git"
  },
  "keywords": [
    "iptc",
    "exif",
    "xmp",
    "tags",
    "captions",
    "jpg",
    "metadata",
    "deepl",
    "translation",
    "keywords",
    "photography"
  ],
  "author": "Jannis Blossey <jannis@blossey.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jblossey/PixTranslator/issues"
  },
  "homepage": "https://github.com/jblossey/PixTranslator/blob/master/README.md",
  "build": {
    "appId": "com.pixtranslator",
    "productName": "Pixtranslator",
    "copyright": "Copyright Â© 2020 ${author}",
    "asar": true,
    "extraResources": [
      {
        "from": "openjdk-jre11-windows64",
        "to": "app.asar.unpacked/openjdk-jre11-windows64",
        "filter": [
          "**/**"
        ]
      }
    ],
    "asarUnpack": [
      "databasehandler**",
      "metadatahandler**",
      "./openjdk-jre11-windows64/**"
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb",
        "snap"
      ],
      "category": "Graphics"
    },
    "snap": {
      "publish": "github"
    },
    "publish": {
      "provider": "github"
    }
  },
  "dependencies": {
    "about-window": "^1.13.2",
    "electron-json-storage": "^4.1.8",
    "electron-progressbar": "^1.2.0",
    "electron-unhandled": "^3.0.2",
    "electron-updater": "^4.2.5",
    "electron-util": "^0.14.1",
    "jquery": "^3.4.1",
    "needle": "^2.3.3",
    "nodemailer": "^6.4.6",
    "promise": "^8.1.0",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "ava": "^3.8.1",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "nyc": "^15.0.1",
    "xo": "^0.32.0"
  }
}
